<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>FilmStoreWebProject</display-name>
  <welcome-file-list>
    <welcome-file>index_redirect.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>401</error-code>
    <location>/error-page.jsp</location>
  </error-page>
  <error-page>
    <error-code>403</error-code>
    <location>/error-page.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/error-page.jsp</location>
  </error-page>
  <listener>
    <listener-class>by.training.filmstore.controller.FilmStoreContextListener</listener-class>
  </listener>
  <listener>
  	<listener-class>by.training.filmstore.controller.FilmStoreSessionListener</listener-class>
  </listener>
  <servlet>
    <description></description>
    <display-name>Controller</display-name>
    <servlet-name>Controller</servlet-name>
    <servlet-class>by.training.filmstore.controller.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/Controller</url-pattern>
  </servlet-mapping>
    <filter>
    <filter-name>encodingFilter</filter-name>
    <filter-class>by.training.filmstore.controller.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>encodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>